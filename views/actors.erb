<div class="jumbotron">
  <h1>Actors</h1>
</div>
<div class ="center">
  <p><a href="/">Home</a></p>
</div>
<hr>
<div class="container">
  <h2>Current actors included in database:</h2>
  <h4>Click on a actor name to access their information:</h4>
  <div class="columns">
    <% if @actors.any? %>
      <% @actors.each do |actor| %>
        <ul>
          <li><a href="/actors/<%= actor.id %>"><%= actor.name %></a></li>
        </ul>
      <% end %>
  </div>
  <% else %>
    <p>There are no actors in the database yet.</p>
  <%end%>
  </div>
</div>
