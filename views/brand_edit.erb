<div class="jumbotron">
  <h1>Brand Name: <%= @brand.name %></h1>
  <h4>Brand Price: <%= @brand.price %></h4>
</div>
<div class="container">
  <h3>Change Brand Name:</h3>
  <form action="/brand_edit/<%= @brand.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class="form-group">
      <input class="form-control" type="text" name="new_brand_name">
    </div>
    <button class="btn btn-info" type="submit">Update Brand</button>
  </form>

  <h3>Remove Brand from Database:</h3>
  <form action="/brand_delete/<%= @brand.id%>" method="post">
    <input type="hidden" name="_method" value="delete">

    <button class="btn btn-danger" type="submit">Delete Brand</button>
  </form>
  <br>
  <footer>
    <hr>
    <div class ="center">
      <p><a href="/brands/<%= @brand.id %>">Back</a> | <a href="/">Home</a></p>
    </div>
  </footer>
</div>
