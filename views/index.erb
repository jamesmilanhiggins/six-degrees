<div class="jumbotron">
  <h1>Six Degrees</h1>
</div>
<div class="container">

  <form action="/degrees" method="post">
    <div class="form-group">
      <select id='id' name='id' type='text' class="form-control">
        <% @actors.each() do |actor| %>
        <option value="<%= actor.id()%>"> <%= actor.name %></option>
        <% end %>
      </select>
      <select id='actor_id' name='actor_id' type='text' class="form-control">
        <% @actors.each() do |actor| %>
        <option value="<%= actor.id()%>"> <%= actor.name %></option>
        <% end %>
      </select>
    </div>
    <button class="btn btn-info" type="submit">See Degrees</button>
  </form>

  <h2>Current movies included in database:</h2>
  <h4>Click on a movie name to access their inventory:</h4>
  <% if @movies.any? %>
    <% @movies.each do |movie| %>
      <ul>
        <li><a href="/movies/<%= movie.id %>"><%= movie.title %></a></li>
      </ul>
    <% end %>
  <% else %>
    <p>There are no movies in the database yet.</p>
  <%end%>

  <h4>Add movie to the database:</h4>
  <form action="/movies" method="post">
    <label for="new_movie">Add a Movie Name:</label>
    <input type="text" name="new_movie">

    <button class="btn btn-info" type="submit">Add Movie</button>
  </form>

  <h2>Current actors included in database:</h2>
  <h4>Click on a actor name to access their information:</h4>
  <% if @actors.any? %>
    <% @actors.each do |actor| %>
        <li><a href="/actors/<%= actor.id %>"><%= actor.name %> <%= actor.id %></a></li>
      </ul>
    <% end %>
  <% else %>
    <p>There are no actors in the database yet.</p>
  <%end%>

  <h4>Add actors to the database:</h4>

  <form action="/actors" method="post">
    <label for="actor_name">Add a Actor First Name:</label>
    <input type="text" name="actor_name">

    <button class="btn btn-info" type="submit">Add Actor</button>
  </form>
</div>
